[user]
	name = PARA_USER
	email = PARA_EMAIL

[color]
	ui = true

[core]
	editor = vim
	quotepath = false
	autocrlf = false
	excludesfile = ~/.gitignore

[pull]
	rebase = true

[merge]
	tool = vimdiff

[i18n]
	commitencoding = utf-8
	logoutputencoding = utf-8

[credential]
	helper = store --file ~/.git-credentials

[push]
	default = simple

[commit]
	template = ~/.gitmessage

